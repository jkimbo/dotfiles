# Common shell functions
alias less='less -r'
alias tf='tail -f'
alias l='less'
alias lh='ls -alt | head' # see the last modified files
alias screen='TERM=screen screen'
alias cl='clear'
alias ps='ps aux'
alias please='sudo'
alias spell='aspell -a <<< '

# Zippin
alias gz='tar -zcvf'

alias ka9='killall -9'
