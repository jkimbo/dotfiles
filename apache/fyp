<VirtualHost *:80>

    ServerAlias fyp.local
	DocumentRoot "/home/jkimbo/code/fyp/client"
	<Directory "/home/jkimbo/code/fyp/client/">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>
 
    <Location />
        ProxyPass http://localhost:3000/ retry=0
        ProxyPassReverse http://localhost:3000/
    </Location>

</VirtualHost>
