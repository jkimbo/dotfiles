<VirtualHost *:80>

    ServerAlias fyp-server.local
	DocumentRoot "/home/jkimbo/code/fyp/server"
	<Directory "/home/jkimbo/code/fyp/server/">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>
 
    <Location />
        ProxyPass http://localhost:1337/ retry=0
        ProxyPassReverse http://localhost:1337/
    </Location>

</VirtualHost>
